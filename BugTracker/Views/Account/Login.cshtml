@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTracker.styles.css" asp-append-version="true" />
    <style>
        .form-floating {
            margin-bottom: 5px;
        }

        .col-md-4 {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
            <form id="account" method="post">
                <h2>Sign In</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="email" placeholder="email" />
                    <label asp-for="@Model.Email"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <span asp-validation-for="@Model.Password" class="text-danger small"></span>
                <div class="form-floating">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="password" placeholder="password" />
                    <label asp-for="@Model.Password"></label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <h6>Don't have an account yet? <a style="text-decoration: none;" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]"> Register</a></h6>

                <button style="margin-top: 30px;" type="submit" class="w-100 btn btn-lg btn-primary">Sign In</button>

                <div asp-validation-summary="All" class="text-danger small"></div>
            </form>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
