@model List<UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName;
}
<!DOCTYPE html>
<html>
<head>
    <title>Manage users in role</title>
</head>
<body>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@roleName Role Users</h1>
                </div>
            </div>
        </div>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card">
            <div id="viewAll" class="card-body table-responsive">
                <form asp-controller="Roles" asp-action="ManageUsersInRole" asp-route-roleId="@roleId" method="post" class="d-inline">
                    <table class="table table-striped" id="permissionTable">
                        <thead>
                            <tr>
                                <th>UserName</th>
                                <th>Is in Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                <tr>
                                    <td>
                                        @Model[i].UserName
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                        <button type="submit" id="save" class="btn btn-success">
                            <i class="fa fa-check"></i>
                            Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- /.content -->
</body>
</html>