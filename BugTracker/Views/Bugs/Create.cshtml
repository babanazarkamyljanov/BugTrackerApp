@model CreateBugViewModel
@inject RoleManager<Role> RoleManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html>
<head>
    <title>Bug Create</title>
</head>
<body>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create a new Bug</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Projects" asp-action="Index">Bugs</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <!-- General details -->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="@Model.Bug.Title">Bug Title</label>
                                <input asp-for="@Model.Bug.Title" type="text" class="form-control">
                                <span asp-validation-for="@Model.Bug.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Bug.Priority">Priority</label>
                                <select asp-for="@Model.Bug.Priority" class="form-control custom-select">
                                    <option selected disabled>Select Priority</option>
                                    <option>Low</option>
                                    <option>Medium</option>
                                    <option>High</option>
                                </select>
                                <span asp-validation-for="@Model.Bug.Priority" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Bug.Description">Bug Description</label>
                                <textarea id="descriptionEditor" asp-for="@Model.Bug.Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="@Model.Bug.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>

                <!-- select Assignee and Project -->
                <div class="col-md-6">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Other Details</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                @{
                                    var assigneeList = new List<SelectListItem>();
                                    foreach (var user in Model.AssigneeList)
                                    {
                                        assigneeList.Add(new SelectListItem { Value = user.Id.ToString(), Text = user.Email });
                                    }
                                }
                                <label asp-for="@Model.Bug.AssignedUserId">Assignee</label>
                                <select asp-for="@Model.Bug.AssignedUserId" asp-items="@assigneeList" class="form-control custom-select"></select>
                                <span asp-validation-for="@Model.Bug.AssignedUserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                @{
                                    var projectList = new List<SelectListItem>();
                                    foreach (var project in Model.Projects)
                                    {
                                        projectList.Add(new SelectListItem { Value = project.Id.ToString(), Text = project.Title });
                                    }
                                }
                                <label asp-for="@Model.Bug.ProjectId">Project</label>
                                <select asp-for="@Model.Bug.ProjectId" asp-items="@projectList" class="form-control custom-select"></select>
                                <span asp-validation-for="@Model.Bug.ProjectId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <div class="col-12">
                    <a asp-controller="Bugs" asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-success">
                </div>
            </div>
        </form>
    </section>
    <!-- /.content -->

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#descriptionEditor').summernote()
        })
    </script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>