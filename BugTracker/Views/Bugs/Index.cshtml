@model IEnumerable<GetAllBugDTO>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>All Bugs</h1>
        </div>
    </div>

    <div class="row g-3 align-items-center">
        <div class="col-6">
            <input class="form-control form-control-lg" id="searchInput" placeholder="search by title, priority, status" />
        </div>
        <div class="col-6">
            <button class="btn btn-primary btn-lg" id="searchBtn" type="button">Search</button>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 20%">Title</th>
                        <th style="width: 5%">Project Key</th>
                        <th style="width: 30%">Assignee</th>
                        <th>Priority</th>
                        <th style="width: 8%">Status</th>
                        <th style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Title
                                <br />
                                <small>Created @item.CreatedDate</small>
                            </td>
                            <td>
                                <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.ProjectId">@item.ProjectKey</a>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        @if (item.Assignee.AvatarPhoto is null)
                                        {
                                            <img src="~/img/default-avatar.png" class="table-avatar" alt="User Image">
                                        }
                                        else
                                        {
                                            string src = "data:image/png;base64,"
                                            + Convert.ToBase64String(item.Assignee.AvatarPhoto, 0, item.Assignee.AvatarPhoto.Length);
                                            <img src="@src" class="table-avatar" alt="User Image">
                                        }
                                    </li>
                                    <li class="list-inline-item">
                                        <h6>@item.Assignee.UserName</h6>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <h6>@item.Priority</h6>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">@item.Status</span>
                            </td>
                            <td class="project-actions text-right">
                                <a title="View" class="btn btn-primary btn-sm" asp-controller="Bugs" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-eye">
                                    </i>    
                                </a>
                                <a title="edit" class="btn btn-info btn-sm" asp-controller="Bugs" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i> 
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/loadBugs.js"></script>
    <script>
        $(function () {
            $('#searchBtn').click(function () {
                var searchTerm = $('#searchInput').val()

                $.ajax({
                    url: '/Bugs/Search/',
                    method: 'GET',
                    data: { searchTerm: searchTerm },
                    success: () => {
                        $('#searchInput').val('');
                    },
                    error: (error) => {
                        console.log(JSON.stringify(error))
                    }
                });
            });
        });
    </script>
}