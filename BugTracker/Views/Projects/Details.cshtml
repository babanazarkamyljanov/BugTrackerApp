@model Project

<!DOCTYPE html>
<html>
<head>
    <title>Project Details</title>
    <style>
        @@media (max-width: 992px) {
            div.col-12.col-lg-6.order-2.p-5 {
                padding: 0px 7.5px !important;
            }

            div.rightColumn.col-12.col-lg-6 {
                -ms-flex: 0 0 50%;
                flex: 0 0 50%;
                max-width: 50%;
            }
        }
    </style>
</head>
<body>
    <section class="content">

        <!-- Project Details -->
        <div class="card card-secondary m-1">
            <div class="card-header">
                <h3 class="card-title">Project Details</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Left column Project Title and Description-->
                    <div class="col-12 col-lg-6 order-1">
                        <h3 class="text-primary">@Model.Title</h3>
                        <p class="text-muted">@Html.Raw(@Model.Description)</p>
                        <br>
                    </div>

                    <!-- Right Column Other Details-->
                    <div class="col-12 col-lg-6 order-2 p-5">
                        <div class="row justify-content-around">
                            <div class="rightColumn col-12 col-lg-6 order-1">
                                <p class="text-lg">
                                    Key
                                    <b class="d-block text-blue">@Model.Key</b>
                                </p>
                                <p class="text-lg">
                                    Status
                                    <b class="d-block text-blue">@Model.Status</b>
                                </p>
                                <p class="text-lg">
                                    Priority
                                    <b class="d-block text-blue">@Model.Priority</b>
                                </p>
                                <p class="text-lg">
                                    Created Date
                                    <b class="d-block text-blue">@Model.CreatedDate</b>
                                </p>
                            </div>
                            <div class="rightColumn col-12 col-lg-6 order-2">
                                <p class="text-lg">
                                    Project Manager
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            @if (@Model.Manager.AvatarPhoto is null)
                                            {
                                                <img src="~/img/default-avatar.png" class="table-avatar" width="30" height="30" alt="User Image">
                                            }
                                            else
                                            {
                                                string src = "data:image/png;base64," + Convert.ToBase64String(Model.Manager.AvatarPhoto, 0, Model.Manager.AvatarPhoto.Length);
                                                <img src="@src" class="table-avatar" width="30" height="30" alt="User Image">
                                            }
                                        </li>
                                        <li class="list-inline-item">
                                            <b class="d-block text-blue">@Model.Manager.FirstName @Model.Manager.LastName</b>
                                        </li>
                                    </ul>
                                </p>
                                <p class="text-lg">
                                    Created By
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            @if(@Model.CreatedBy.AvatarPhoto is null)
                                            {
                                                <img src="~/img/default-avatar.png" class="table-avatar" width="30" height="30" alt="User Image">
                                            }
                                            else
                                            {
                                                string src = "data:image/png;base64," + Convert.ToBase64String(Model.CreatedBy.AvatarPhoto, 0, Model.CreatedBy.AvatarPhoto.Length);
                                                <img src="@src" class="table-avatar" width="30" height="30" alt="User Image">
                                            }
                                        </li>
                                        <li class="list-inline-item">
                                            <b class="d-block text-blue">@Model.CreatedBy.FirstName @Model.CreatedBy.LastName</b>
                                        </li>
                                    </ul>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Bugs -->
        <div class="card card-success m-1">
            <div class="card-header">
                <h3 class="card-title"> Project Bugs</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @{
                    if (Model.Bugs.Count == 0)
                    {
                        <h5>No Bugs is created yet for this project.</h5>
                    }
                    else
                    {
                        <h4>Project Bugs</h4>
                    }
                }

                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bug in Model.Bugs)
                        {
                            <tr>
                                <td><a asp-controller="Bugs" asp-action="Details" asp-route-id="@bug.Id">@bug.Title</a></td>
                                <td>@Html.Raw(bug.Description)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>
</html>
