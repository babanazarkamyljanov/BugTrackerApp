@model EditProjectDTO
@inject RoleManager<Role> RoleManager
@inject UserManager<User> UserManager
@inject IViewsService ViewsService
@{
    var managers = await @ViewsService.GetOrganizationManagers();
}

@{
    var errorMessage = ViewData["ErrorMessage"];
}
@{
    if (errorMessage != null)
    {
        <h1 class="text-danger">Error</h1>
        <h2 class="text-danger">An error occurred while processing your request</h2>
        <p>@ViewData["ErrorMessage"]</p>
    }
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Project</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Projects" asp-action="Index">Projects</a></li>
                    <li class="breadcrumb-item active">Edit Project</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id" />
        <div class="row px-2 py-2">
            <div class="col-md-7">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">General</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="@Model.Title">Project Title</label>
                            <input asp-for="@Model.Title" type="text" class="form-control">
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Description">Project Description</label>
                            <textarea id="descriptionEditor" asp-for="@Model.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Priority">Priority</label>
                            <select asp-for="@Model.Priority" class="form-control custom-select">
                                <option selected disabled>Select Priority</option>
                                <option>Low</option>
                                <option>Medium</option>
                                <option>High</option>
                            </select>
                            <span asp-validation-for="@Model.Priority" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Status">Status</label>
                            <select asp-for="@Model.Status" class="form-control custom-select">
                                <option selected disabled>Select Status</option>
                                <option>Active</option>
                                <option>In Progress</option>
                            </select>
                            <span asp-validation-for="@Model.Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">People</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @{
                                var managerList = new List<SelectListItem>();
                                foreach (var user in managers)
                                {
                                    managerList.Add(new SelectListItem { Value = user.Id.ToString(), Text = user.Email });
                                }
                            }
                            <label asp-for="@Model.ManagerId">Project Manager</label>
                            <select asp-for="@Model.ManagerId" asp-items="@managerList" class="form-control custom-select"></select>
                            <span asp-validation-for="@Model.ManagerId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-8" style="margin-bottom: 10px;">
                <button type="submit" class="btn custom-btn-primary btn-lg">Save</button>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-danger btn-lg float-right" onclick="showConfirmDelete()">Delete</button>
            </div>
        </div>
    </form>
</section>

<!-- delete confirmation dialog -->
<div class="card card-warning" id="deleteConfirmBox">
    <div class="card-header">
        <h3>Delete project?</h3>
    </div>
    <div class="card-body">
        <h5>This will delete the project completely and can't be restored</h5>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <button class="btn btn-secondary btn-lg" onclick="hideDeleteConfirm()" style="margin-right: 5px;">Cancel</button>
        <button class="btn btn-danger btn-lg" onclick="deleteProject()">Delete</button>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            $('#descriptionEditor').summernote();
        })

        function showConfirmDelete() {
            $('#deleteConfirmBox').show();
        }

        function hideDeleteConfirm() {
            $('#deleteConfirmBox').hide()
        }

        function deleteProject() {
            $.ajax({
                type: 'POST',
                url: '/Projects/Delete',
                data: { "id": "@Model.Id.ToString()" },
                success: function (response) {
                    if (response.success) {
                        hideDeleteConfirm()
                        window.location.href = '/Projects/Index';
                    } else {
                        alert(response.message);
                    }
                },
                error: function (error) {
                    console.log(error);
                    alert("There was an error processing the request");
                }
            })
        }
    </script>
}