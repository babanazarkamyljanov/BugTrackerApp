@model IEnumerable<GetAllProjectDTO>

<style>
    button.btn.btn-secondary.buttons-csv.buttons-html5.btn-info.csvButton, 
    button.btn.btn-secondary.buttons-excel.buttons-html5.excelButton {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }
    button.btn.btn-secondary.buttons-excel.buttons-html5.excelButton {
        margin-left: 10px;
    }

    button.btn.btn-secondary.btn-success.addButton {
        margin-left: 10px;
        border-radius: 5px;
        border-radius: 5px;
    }
</style>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>All Projects</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Projects</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Projects</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="example1" class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            Key
                        </th>
                        <th style="width: 20%">
                            Title
                        </th>
                        <th style="width: 30%">
                            Project Manager
                        </th>
                        <th>
                            Priority
                        </th>
                        <th class="no-sort">
                            Progress
                        </th>
                        <th style="width: 8%" class="text-center">
                            Status
                        </th>
                        <th class="no-sort text-right" style="width: 20%">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <h6>@item.Key</h6>
                            </td>
                            <td>
                                <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                                <br />
                                <small>Created @item.CreatedDate</small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        @if (item.Manager.AvatarPhoto is null)
                                        {
                                            <img src="~/img/default-avatar.png" class="table-avatar" alt="User Image">
                                        }
                                        else
                                        {
                                            string src = "data:image/png;base64," 
                                            + Convert.ToBase64String(item.Manager.AvatarPhoto, 0, item.Manager.AvatarPhoto.Length);
                                            <img src="@src" class="table-avatar" alt="User Image">
                                        }
                                    </li>
                                    <li class="list-inline-item">
                                        <h6>@item.Manager.UserName</h6>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <h6>@item.Priority</h6>
                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="57" aria-valuemin="0" aria-valuemax="100" style="width: 57%">
                                    </div>
                                </div>
                                <small>
                                    57% Complete
                                </small>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">@item.Status</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" asp-controller="Projects" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-eye">
                                    </i>
                                </a>
                                <a class="btn btn-info btn-sm" asp-controller="Projects" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
@section Scripts {
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "columnDefs": [{
                    "targets": "no-sort",
                    "orderable": false
                }],
                "buttons": [
                    { extend: 'csv', className: 'btn-info csvButton' },
                    { extend: 'excel', className: 'excelButton' },
                    {
                        text: 'Add',
                        className: 'btn-success addButton',
                        action: function (e, dt, node, config) {
                            window.location.href = "/Projects/Create"
                    }
                }]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}
