@using BugTracker.Helpers;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa-solid fa-gear"></i>
                    Manage Account
                </h3>
            </div>
            
            <div class="card-body">
                <div class="row">
                    <div class="col-5 col-sm-3">
                        <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link @Url.MakeActiveClass("Manage","Index")" asp-controller="Manage" asp-action="Index" asp-route-id="@ViewData["userId"]">Profile</a>
                            <a class="nav-link @Url.MakeActiveClass("Manage","ChangeAvatar")" asp-controller="Manage" asp-action="ChangeAvatar" asp-route-id="@ViewData["userId"]">Change Avatar</a>
                            <a class="nav-link @Url.MakeActiveClass("Manage","ChangeEmail")" asp-controller="Manage" asp-action="ChangeEmail" asp-route-id="@ViewData["userId"]">Email</a>
                            <a class="nav-link @Url.MakeActiveClass("Manage","ChangePassword")" asp-controller="Manage" asp-action="ChangePassword" asp-route-id="@ViewData["userId"]">Password</a>
                            <a class="nav-link @Url.MakeActiveClass("Manage","PersonalData")" asp-controller="Manage" asp-action="PersonalData" asp-route-id="@ViewData["userId"]">Personal Data</a>
                        </div>
                    </div>
                    <div class="col-7 col-sm-9">
                        <p class="text-success">@ViewData["StatusMessage"]</p>
                        <div class="tab-content" id="vert-tabs-tabContent">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
