@model BugTracker.ViewModels.ManageAccount.IndexViewModel

@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    ViewData["userId"] = Model.Id;
}

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <input asp-for="@Model.Id" value="@Model.Id" hidden />
    <div class="form-group">
        <label asp-for="@Model.Username" class="form-label">Username</label>
        <input asp-for="@Model.Username" class="form-control" placeholder="Please choose your username." disabled />
    </div>
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-md btn-primary">Save</button>
</form>
